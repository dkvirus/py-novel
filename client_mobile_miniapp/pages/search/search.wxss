.search {
  padding: 12rpx 18rpx;
  background-color: #fff;
  overflow: hidden;
  position: relative;
  display: flex;
}

.input {
  width: 80%;
  height: 74rpx;
  background-color: #f7f7f7;
  border-radius: 40rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 34rpx;
}

.submit {
  flex: 1;
  margin-left: 20rpx;
  padding: 0 20rpx;
  height: 74rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 74rpx;
  border-radius: 8rpx;
  background-color: #6190e8;
}

.hot, .hist, .novel {
  margin-top: 20rpx;
  padding: 20rpx;
}

.hot-title, .hist-title, .novel-title {
  font-size: 32rpx;
  line-height: 48rpx;
  background-color: #f4f3f9;
  margin-bottom: 10rpx;
}

.hot-list {
  background: #fff;
  display: flex;
  flex-wrap: wrap;
}

.hot-item {
  width: 33.3%;
  height: 130rpx;
  line-height: 130rpx;
  text-align: center;
  box-sizing: border-box;
  border: 1px solid rgb(244, 243, 249);
  font-size: 32rpx;
  color: #333;
}

.hist-list {
  background-color: #fff;
}

.hist-item {
  padding: 24rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  position: relative;
}

.hist-item::after {
  content: '';
  position: absolute;
  transform-origin: center;
  box-sizing: border-box;
  pointer-events: none;
  left: 24rpx;
  right: 0;
  bottom: 0;
  transform: scaleY(0.5);
  border-bottom: 1px solid #d6e4ef;
}

.novel-list {
  background: #fff;
  overflow: hidden;
  padding: 30rpx;
}

.novel-item {
  width: 50%;
  box-sizing: border-box;
  height: 300rpx;
  padding: 20rpx 40rpx;
  float: left;
}

.novel-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
}

.novel-cover {
  width: 100%;
  height: 100%;
  box-shadow: 6rpx 10rpx 6rpx #ccc;
  border-radius: 16rpx;
}

.novel-novelname {
  font-size: 34rpx;
  position: absolute;
  left: 10%;
  top: 20%;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}

.novel-authorname {
  font-size: 26rpx;
  position: absolute;
  top: 70%;
  right: 10%;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
